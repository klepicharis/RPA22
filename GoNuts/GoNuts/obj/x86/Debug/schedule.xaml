<Page
    x:Class="GoNuts.schedule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoNuts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Source="Assets/white-logo.png" HorizontalAlignment="Left" Height="150px" Margin="30,70,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="left">
            <TextBlock Text="Pick up: " FontSize="25px" Margin="30,20,0,0" HorizontalAlignment="Left" Foreground="White"></TextBlock>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,0">
                <CalendarDatePicker></CalendarDatePicker>
            </StackPanel>
            <StackPanel >
                <TimePicker></TimePicker>

            </StackPanel>
                
        </StackPanel>
        
        
    </Grid>
</Page>

